# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/orderauditor

# Shopify Configuration
SHOPIFY_API_KEY=your_client_id_from_partner_dashboard
SHOPIFY_WEBHOOK_SECRET=your_client_secret_from_partner_dashboard
SHOPIFY_API_SECRET=
VITE_SHOPIFY_API_KEY=
SHOPIFY_SHOP_DOMAIN=legacy

# Application Configuration
PORT=5000
APP_URL=https://your-app-url.com
# Log levels: error, warn, info, debug
LOG_LEVEL=debug
NODE_ENV=development

# SMTP Configuration (required for email notifications)
# Leave empty if you don't need email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

