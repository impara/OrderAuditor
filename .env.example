# Database Configuration (for Docker Compose)
# These are used by docker-compose.prod.yml
POSTGRES_USER=orderauditor
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=orderauditor

# Database Connection String (for local development)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://orderauditor:your_strong_password_here@localhost:5432/orderauditor

# Shopify Configuration
SHOPIFY_SHOP_DOMAIN=yourstore.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_your_admin_api_access_token
SHOPIFY_WEBHOOK_SECRET=shpss_your_webhook_secret_key

# Application Configuration

# Logging Configuration
# Options: error, warn, info, debug
# Production: use 'info' to reduce verbosity (default)
# Development: use 'debug' to see all logs (default)
LOG_LEVEL=info
PORT=5000
APP_URL=http://localhost:5000

# Client-side Configuration (optional)
VITE_SHOPIFY_SHOP_DOMAIN=yourstore.myshopify.com
