# Database Configuration
# For local development (direct connection)
DATABASE_URL=postgresql://duplicate-guard:duplicate-guard@localhost:5432/duplicate-guard

# For Docker Compose (both dev and prod)
# These are used to construct DATABASE_URL in the container
POSTGRES_USER=duplicate-guard
POSTGRES_PASSWORD=duplicate-guard
POSTGRES_DB=duplicate-guard
# Optional: Override host/port (defaults: postgres:5432 for Docker, localhost:5432 for local)
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432

# Database connection pool settings (optional - defaults shown)
DB_POOL_MAX=20
DB_POOL_MIN=5

# Shopify Configuration
SHOPIFY_API_KEY=your_client_id_from_partner_dashboard
SHOPIFY_WEBHOOK_SECRET=your_client_secret_from_partner_dashboard
SHOPIFY_API_SECRET=
VITE_SHOPIFY_API_KEY=
SHOPIFY_SHOP_DOMAIN=legacy

# Application Configuration
PORT=5000
APP_URL=https://your-app-url.com
# Log levels: error, warn, info, debug
LOG_LEVEL=debug
NODE_ENV=development

# Shopify Billing Test Mode
# Set to 'true' for app review and development stores (enables test charges)
# Set to 'false' for production (enables real charges)
# IMPORTANT: Must be 'true' during Shopify app review to avoid 403 errors
SHOPIFY_BILLING_TEST_MODE=true

# Shopify Billing Bypass
# Set to 'true' to simulate successful billing upgrades without calling Shopify API
# USE ONLY ON RESTRICTED DEVELOPMENT STORES that throw 403 errors on billing
# If true, this OVERRIDES SHOPIFY_BILLING_TEST_MODE
SHOPIFY_BILLING_BYPASS=true

# SMTP Configuration (required for email notifications)
# Leave empty if you don't need email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

